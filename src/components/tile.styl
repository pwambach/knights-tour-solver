.tile
  flex-shrink: 0
  width: calc(100%/6)
  height: calc(100%/6)
  box-sizing: border-box
  padding: 8px
  box-shadow: inset 0px 0px 2px rgba(0,0,0,0.1)

  &:hover
    .tileContent
      transform: scale(1.2)

.tileContent
  position: relative
  background: green
  height: 100%

.hidden
  background: transparent

.default
  background: black

.double
  background: #666

.multi
  background: black
  border-radius: 50%

.activated
  background: yellow

.start
  &::after
    content: ''
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    background: green
    height: 30%
    width: 30%
